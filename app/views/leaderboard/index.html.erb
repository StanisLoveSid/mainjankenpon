<p id="notice"><%= notice %></p>

<h1>Leaderboard</h1>
<div id="post_content">
<div class="thecard">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Avatar</th>
      <th>Points</th>
      <th>Purchase</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= image_tag(user.avatar.url(:small), class: "circular") %></td>
        
        <td><%= user.points %></td>
        <td><%= user.purchase %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Hero', :controller => "users", :action => "hero", :id => user.id %></td>

      </tr>
    <% end %> 
  </tbody>
</table>
</div>
</div>
<br>


