
<%= form_for([@post, @post.comments.build]) do |f| %>

	
	<br>
	<%= f.label(t("comments.body"), style: "color: black; font-size: 20px;") %><br>
	<%= f.text_area :body, placeholder: 'Type your comment here!', class: "materialize-textarea" %><br>
	<br>
	<%= f.submit(t("comments.create_comment"), class: "btn") %>
<% end %>
