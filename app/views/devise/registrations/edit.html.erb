<div id="page_wrapper">
<h2>Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

 <div class="form-group">
 <h4><%= t "users.points"  %>:  <%= current_user.points %></h4>

   <% if current_user.rating? %>
    <h4>Your rating <%= current_user.rating %> </h4>
    <% else %>
    
    <% end %>

 <p> <%= image_tag(current_user.avatar.url(:medium), class: "circular") %></p>
        <%= f.label :avatar, class: 'col-sm-2 control-label'  %> 
        <div class="col-sm-6">
            <%= f.file_field :avatar, class: "btn" %>
        </div>
    </div>


  <div><%= t "users.name"  %><br />
  <%= f.text_field :name, autofocus: true, style: "width: 40%" %></div>

 <div><%= t "users.location" %><br />
  <%= f.text_field :location, autofocus: true, style: "width: 40%;" %></div>

  <div><%= t "devise.email" %><br />
  <%= f.email_field :email, autofocus: true, style: "width: 40%" %></div>
  <br>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div><%= t "devise.password" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", style: "width: 40%" %></div>

  <div><%= t "devise.password_confirmation"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", style: "width: 40%" %></div>
<% if f.object.encrypted_password.present? %>
  <div><%= t "devise.current_password" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", style: "width: 40%" %></div>
<% end %>
  <div><%= f.submit "Update", class: "btn" %></div>
  
<% end %>

<p> <%= t "devise.unpleased"  %> <%= button_to(t("devise.delete"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete) %></p>

<%= link_to(t("devise.back"), :back) %>
</div>
