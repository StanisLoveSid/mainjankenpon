<div id="post_content">
<h1 class="title">
	<%= @post.title %>
</h1>

<p class="date">
<%= t "posts.submited" %> <%= time_ago_in_words(@post.created_at) %> <%= t "posts.ago"%>
  <% if @post.user == current_user %>
| <%= link_to(t('posts.edit'), edit_post_path(@post)) %>
| <%= link_to(t('posts.delete'), post_path(@post), method: :delete, data: {confirm: 'Are you sure? Ви впевнені? あなたは深刻ですか？'}) %>
  </p>
 <% end %>


 <p class="body">
 <%= @post.body %>
 </p>

 <p class="btn-group pull-right">
  <%= link_to like_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    Upvote
    <%= @post.get_upvotes.size %>
  <% end %>
  <%= link_to dislike_post_path(@post), method: :put, class: "btn btn-default btn-sm" do %>
    <span class="glyphicon glyphicon-chevron-down">
    Downvote
    <%= @post.get_downvotes.size %>
  <% end %>
</p>

 <div id="comments">
	 <h2><%= @post.comments.count %> <%= t "posts.comments"%></h2>
	 <%= render @post.comments %>
	 <h3><%= t "posts.add_comment"%> </h3>
 <%= render "comments/form" %>
   </div>
 </div>

 
